<window anim_hint="htranslate" theme="tab_bottom" style="sky">

  <view x="0" y="5%" w="90%" h="100%" layout="row:1 col:0 m:10 s:10">
    <view name="qr_view" x="0" y="5%" w="50%" h="100%" layout="row:0 col:1 m:10 s:10">
      <qr name="qr_code" style="qr_border" x="c" y="0" w="100%" h="50%" text="致远" pix_size="3"/>
    </view>
    <view x="50%" y="5%" w="50%" h="50%" layout="row:0 col:1 m:10 s:10">
      <list_item style="empty" children_layout="default(r=1,c=0)" x="0" y="0" w="90%" h="25">
        <label w="50%" text="pix_size:"/>
        <edit name="i_pix_size" w="50%" h="100%" right_margin="8" tips="pix_size" input_type="uint" min="1" max="8" step="1">
          <button name="inc" repeat="300" style="spinbox_up" x="right" y="0" w="15" h="50%" />
          <button name="dec" repeat="300" style="spinbox_down" x="right" y="bottom" w="15" h="50%" />
        </edit>
      </list_item>
      <list_item style="empty" children_layout="default(r=1,c=0)" x="0" y="0" w="90%" h="25">
        <label w="30%" text="text"/>
        <edit w="70%" name="i_text" left_margin="34" tips="text" min="0" max="150" step="0.1">
          <image draw_type="icon" image="find" x="0" y="0" w="30" h="100%" />
        </edit>
      </list_item>
      <list_item style="empty" children_layout="default(r=1,c=0)" x="c" y="0" w="90%" h="50">
        <button name="sale_ok" style="select_style" x="c" y="0" w="25%" h="62" text="OK" />
      </list_item>
      <list_item style="empty" children_layout="default(r=1,c=0)" x="c" y="0" w="90%" h="50">
        <button name="stat_change" x="c" y="0" w="70%" h="62" text="stat_change" />
      </list_item>
      <list_item style="empty" children_layout="default(r=1,c=0)" x="c" y="0" w="90%" h="50">
        <button name="gen_by_code" x="c" y="0" w="70%" h="62" text="gen_by_code" />
      </list_item>
      <list_item style="empty" children_layout="default(r=1,c=0)" x="c" y="0" w="90%" h="50">
        <button name="des_by_code" x="c" y="0" w="70%" h="62" text="des_by_code" />
      </list_item>
      <list_item style="empty" children_layout="default(r=1,c=0)" x="c" y="0" w="90%" h="50">
        <button name="hide_qr" x="c" y="0" w="70%" h="62" text="hide_qr" />
      </list_item>
      <list_item style="empty" children_layout="default(r=1,c=0)" x="c" y="0" w="90%" h="50">
        <button name="show_fps" x="c" y="0" w="70%" h="62" text="show_fps" />
      </list_item>
    </view>
  </view>
</window>